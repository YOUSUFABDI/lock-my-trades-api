generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String

  trades Trade[]
}

model Trade {
  id         String    @id @default(uuid())
  userId     String
  platform   String
  symbol     String
  direction  String
  entryTime  DateTime
  exitTime   DateTime?
  entryPrice Float
  exitPrice  Float
  quantity   Float
  result     Float
  ticketId   String    @unique
  tags       Json      @default("[]")
  notes      String?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id])
}
